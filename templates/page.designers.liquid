<div class="page-width page-container">
  <header class="rte">
    <h1>Our Designers</h1>
  </header>
  <div>
    {{ page.content }}
    <div class="designers">
      {% for collection in collections %}

        {% if collection.template_suffix == "designer" %}

          <div class="designer-feature">
            {% if collection.image %}
              <img src="{{ collection | img_url: 'large' }}"  alt="{{ collection.title | escape }}"/>
            {% else %}
              <img src="https://cdn.stilnest.com/media/productcollection/image/cache/1900x/10a946f8d6950656339a5a2481b95cb6/s/t/stilnest_luisa_6_rz_1_.jpg"/>
            {% endif %}
            <div id="designer-image"></div>
            <h2 id="designer-name">{{ collection.title }}</h2>
            <p id="designer-description">{{ collection.description | truncate: 340 | strip_newlines }}</p>
            <a href="{{ collection.url }}"><button class="btn">SEE MORE</button></a>
          </div></div>

        {% endif %}

      {% endfor %}
    </div>
  </div>
</div>
